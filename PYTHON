  #simulaçao de saque em um caixa eletronico com notas de 1, 5, 10, 20, 50 e 100 reais
for i in range(3):
    print("Bem vindo ao caixa eletronico")
    print("Notas disponiveis para saque: 1, 5, 10, 20, 50 e 100 reais")
    print("qual sera o valor de saque?")     
    saque = int (input()) #valor do saque
    if(saque>=10) and (saque<=600):
        cem = saque // 100
        saque = saque % 100
        cinquenta = saque // 50
        saque = saque % 50
        vinte = saque // 20
        saque = saque % 20
        dez = saque // 10
        saque = saque % 10
        cinco = saque // 5
        saque = saque % 5
        um = saque // 1
        saque = saque % 1
        print("Notas de 100: ", cem)
        print("Notas de 50: ", cinquenta)
        print("Notas de 20: ", vinte)
        print("Notas de 10: ", dez)
        print("Notas de 5: ", cinco)
        print("moeda de 1: ", um)
        print("gaste com moderação ●‿● ")
        break
    else:
        print("desculpe, disponivel para saque apenas valores maiores que 10 reais e menores que 600 reais")    
        print("quer tentar sacar novamente? (s/n)")
        char = input()
        if (char == 'n'):
         break 
if range == 3: 
    print("limite de tentativas excedido")
    print("ops, tente novamente nos promiximos 5 minutos")
    
    
    
    
    
    
    
    
    
